---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  bullets?: string[];
  slug: string;
  price?: string;
  plans?: { name: string; price: string; description?: string; features?: string[] }[];
  onDetail?: () => void;
}
const { title, description, icon, bullets, slug, price, plans } = Astro.props;
---
<a href={`/${slug}`} class="block focus:outline-none focus:ring-4 focus:ring-cyan-200 rounded-2xl group">
  <article class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center hover:scale-105 hover:shadow-2xl transition-transform duration-300 group font-sans cursor-pointer">
    {icon ? (
      <div class="text-5xl mb-3">{icon}</div>
    ) : (
      <img src="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=400&q=80" alt="Servicio" class="w-16 h-16 rounded-full mb-3 object-cover shadow-md" loading="lazy" />
    )}
    <h3 class="text-xl font-extrabold mb-2 text-center text-[#232B5D] group-hover:text-[#00C1D5] transition-colors">{title}</h3>
    <p class="text-gray-600 mb-3 text-center font-medium">{description}</p>
    {price && (
      <div class="mb-2 text-lg font-bold text-[#00C1D5] flex items-center gap-2">
        <span class="inline-block bg-[#00C1D5]/10 text-[#00C1D5] px-3 py-1 rounded-full text-sm">{price}</span>
      </div>
    )}
    {plans && plans.length > 0 && (
      <div class="mb-2 w-full">
        <div class="flex flex-wrap gap-2 justify-center">
          {plans.map(plan => (
            <span class="inline-block bg-[#00C1D5]/10 text-[#232B5D] px-2 py-0.5 rounded text-xs font-semibold border border-[#00C1D5]" title={plan.description}>{plan.name}</span>
          ))}
        </div>
      </div>
    )}
    {bullets && (
      <ul class="mb-3 text-sm text-left list-disc list-inside text-gray-500">
        {bullets.map(bullet => <li>{bullet}</li>)}
      </ul>
    )}
    <span class="mt-auto px-5 py-2 bg-gradient-to-r from-[#232B5D] to-[#00C1D5] text-white rounded-full shadow hover:from-[#00C1D5] hover:to-[#232B5D] transition-all font-semibold tracking-wide">Ver detalle</span>
  </article>
</a>
