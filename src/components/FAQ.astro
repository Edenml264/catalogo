---
export interface FAQItem {
  question: string;
  answer: string;
}
const { items } = Astro.props as { items: FAQItem[] };
---
<section class="my-10">
  <h2 class="text-2xl font-bold mb-4 text-center">Preguntas Frecuentes</h2>
  <div class="space-y-4 max-w-2xl mx-auto">
    {items.map(item => (
      <details class="bg-white shadow rounded p-4">
        <summary class="font-semibold cursor-pointer">{item.question}</summary>
        <p class="mt-2 text-gray-600">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
